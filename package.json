{
  "name": "kohiya",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,.js,jsx,css,scss,md,html,json}\""
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint"
    ],
    "**/*.{css,scss,md,html,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.6",
    "prettier": "^3.2.5",
    "turbo": "^2.1.2",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "lint-staged": "^15.2.10"
  }
}
